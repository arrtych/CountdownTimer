@using System.Timers;

<div class="timer-section">
    <ProgressBar 
        Progress=@hours  
        TimeType="ProgressBar.ETimeType.Hours"
        Style=@hoursStyle
    />

    <ProgressBar 
        Progress=@minutes       
        TimeType="ProgressBar.ETimeType.Minutes"
        Style=@minutesStyle 
    />

    <ProgressBar 
        Progress=@seconds
        TimeType="ProgressBar.ETimeType.Seconds"
        Style=@secondsStyle 
    />

</div>
